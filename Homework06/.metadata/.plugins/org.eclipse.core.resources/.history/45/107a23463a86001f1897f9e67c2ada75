//MAIN.C CARLSON CODE VARIBLES
#ifndef MACROS_H_
#define MACROS_H_
#define ALWAYS                  (1)
#define RESET_STATE             (0)
#define RED_LED              (0x01) // RED LED 0
#define GRN_LED              (0x40) // GREEN LED 1
#define TEST_PROBE           (0x01) // 0 TEST PROBE
#define TRUE                 (0x01) //

// STATES ======================================================================
#define NONE ('N')
#define STRAIGHT ('L')
#define CIRCLE ('C')
#define SPINCOUNTERCLK ('F')
#define PROJECTFIVE ('P')
#define SPINCLK ('G')
#define EMPTY ('E')
#define WAIT ('W')
#define START ('S')
#define RUN ('R')
#define END ('E')


#endif /* MACROS_H_ */
